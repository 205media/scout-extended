{
    "name": "algolia/scout-extended",
    "description": "Extends Laravel Scout's Algolia driver adding Algolia-specific features",
    "keywords": ["laravel", "scout", "algolia", "extended", "search", "places", "analytics"],
    "license": "MIT",
    "authors": [
        {
            "name": "Algolia Team",
            "email": "contact@algolia.comm"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "riimu/kit-phpencoder": "^2.3",
        "algolia/algoliasearch-client-php": "@dev",
        "laravel/framework": "^5.6",
        "laravel/scout": "@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../scout"
        },
        {
            "type": "path",
            "url": "../algoliasearch-client-php"
        }
    ],
    "require-dev": {
        "fzaninotto/faker": "^1.8",
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "^3.0",
        "phpstan/phpstan": "^0.10",
        "phpunit/phpunit": "^7.3",
        "nunomaduro/larastan": "^0.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "tests/laravel/app"
        },
        "files": [
            "vendor/mockery/mockery/library/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Algolia\\ScoutExtended\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Algolia\\ScoutExtended\\ScoutExtendedServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
